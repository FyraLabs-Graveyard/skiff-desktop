  <metadata_license>CC0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <name>Skiff</name>
  <summary>Privacy-first end-to-end encrypted email</summary>
  <url type="homepage">https://skiff.com</url>
  <url type="bugtracker">https://github.com/FyraLabs/skiff-desktop</url>
