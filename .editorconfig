root = true

[*]
charset                  = utf-8
end_of_line              = lf
insert_final_newline     = true
max_line_length          = 120
trim_trailing_whitespace = true

[*.json]
indent_size  = 4
indent_style = space

[meson{.build,_options.txt}]
indent_size  = 2
indent_style = space

[*.{vala,vapi}]
indent_size  = 4
indent_style = space

[*.{ui,xml,doap}{,.in}{,.in}]
indent_size  = 2
indent_style = space

[*.{yaml,yml}]
indent_size  = 2
indent_style = space
